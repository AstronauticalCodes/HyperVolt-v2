# Data Collection Settings
DATA_COLLECTION_INTERVAL=300  # seconds (5 minutes)
HISTORICAL_DATA_DAYS=30

# Model Settings
MODEL_UPDATE_INTERVAL=3600  # seconds (1 hour)
PREDICTION_HORIZON=6  # hours
